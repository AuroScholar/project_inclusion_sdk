<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/U_TO_B"
        app:constraintSetEnd="@id/bookedSelected"
        app:duration="1000"
        app:constraintSetStart="@+id/upcomingSelected" />

    <Transition
        android:id="@+id/B_TO_U"
        app:duration="1000"
        app:constraintSetEnd="@id/upcomingSelected"
        app:constraintSetStart="@+id/bookedSelected" />

    <ConstraintSet android:id="@+id/upcomingSelected">
        <Constraint
            android:id="@+id/ivTabBg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/g50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/tvUpcoming"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/g50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                app:attributeName="TextColor"
                app:customColorValue="#FFFFFF" />
        </Constraint>

        <Constraint
            android:id="@+id/tvBooked"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/g50"
            app:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                app:attributeName="TextColor"
                app:customColorValue="#6E6E6E" />
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/bookedSelected">
        <Constraint
            android:id="@+id/ivTabBg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/g50"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/tvUpcoming"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/g50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                app:attributeName="TextColor"
                app:customColorValue="#6E6E6E" />
        </Constraint>

        <Constraint
            android:id="@+id/tvBooked"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/g50"
            app:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                app:attributeName="TextColor"
                app:customColorValue="#FFFFFF" />
        </Constraint>
    </ConstraintSet>


</MotionScene>
